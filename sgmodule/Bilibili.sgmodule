#!name=哔哩哔哩净化
#!desc=哔哩哔哩净化

// ==UserScript==
// @ScriptName        BiliBili_AdBlock_DIY
// @UpdateTime        2023-03-04
// @Function          去广告配置（自用，不定期更新）
// @Suitable          自行观看“# > ”注释内容
// @ScriptURL         https://github.com/ddgksf2013/Rewrite/raw/master/AdBlock/Bilibili.conf
// ==/UserScript==


[MITM]

hostname = -broadcast.chat.bilibili.com, -*cdn*.biliapi.net, -*tracker*.biliapi.net, app.bilibili.com, api.live.bilibili.com, *.bilibili.com, *.bilibili.*, grpc.biliapi.net,*biliapi.net

[URL Rewrite]

# ～ BiliBili_哔哩哔哩_屏蔽广告浮窗
^https?:\/\/api\.bilibili\.com\/pgc\/activity\/deliver\/material\/receive - reject-dict
# ～ BiliBili_哔哩哔哩_屏蔽IP请求
^https?:\/\/app\.bilibili\.com\/x\/resource\/ip - reject
# ～ BiliBili_哔哩哔哩_屏蔽DefaultWord
^https?:\/\/(app\.bilibili\.com|grpc\.biliapi\.net)\/bilibili\.app\.interface\.v1\.Search\/Default - reject
# ～ BiliBili_哔哩哔哩_应用开屏去广告
^https://app.bilibili.com/x/v2/splash/show - reject-dict
# ～ BiliBili_哔哩哔哩_Defaultword
^https://app.bilibili.com/x/v2/search/defaultwords - reject-dict
# ～ BiliBili_哔哩哔哩_Material_Ad
^https?:\/\/api\.bilibili\.com\/x\/vip\/ads\/material\/report - reject-dict
# ～ BiliBili_哔哩哔哩_小卡片广告
^https://api.bilibili.com/pgc/season/player/cards - reject-dict
# ～ BiliBili_哔哩哔哩_漫画去广告
^https?:\/\/manga\.bilibili\.com\/twirp\/comic\.v\d\.Comic\/(Flash|ListFlash|GetActivityTab) - reject-dict

[Script]

# ～ BiliBili_哔哩哔哩_视频播放下方商品推广
哔哩哔哩_视频播放下方商品推广 = type=http-response,pattern=^https?:\/\/api\.bili(api|bili)\.(net|com)\/pgc\/season\/app\/related\/recommend\? requires-body=1,max-size=0,script-path=https://raw.githubusercontent.com/Softlyx/QuantumultX/main/AdBlock/Bilibili/Bilibili.js,script-update-interval=0
# ～ BiliBili_哔哩哔哩_屏蔽直播页顶部轮播图
哔哩哔哩_屏蔽直播页顶部轮播图 = type=http-response,pattern=^https?:\/\/api\.live\.bilibili\.com\/xlive\/app-interface\/v2\/index\/feed requires-body=1,max-size=0,script-path=https://raw.githubusercontent.com/Softlyx/QuantumultX/main/AdBlock/Bilibili/Bilibili.js,script-update-interval=0
# ～ BiliBili_哔哩哔哩_屏蔽直播间商品广告浮窗[还有一个域名]
哔哩哔哩_屏蔽直播间商品广告浮窗 = type=http-response,pattern=^https?:\/\/api\.live\.bilibili\.com\/xlive\/e-commerce-interface\/v\d\/ecommerce-user\/get_shopping_info\? requires-body=1,max-size=0,script-path=https://raw.githubusercontent.com/Softlyx/QuantumultX/main/AdBlock/Bilibili/Bilibili.js,script-update-interval=0
# ～ BiliBili_哔哩哔哩_屏蔽首页右上活动
哔哩哔哩_屏蔽直播间商品广告浮窗 = type=http-response,pattern=^https?:\/\/app\.bilibili\.com\/x\/resource\/top\/activity requires-body=1,max-size=0,script-path=https://raw.githubusercontent.com/Softlyx/QuantumultX/main/AdBlock/Bilibili/Bilibili.js,script-update-interval=0
# ～ BiliBili_哔哩哔哩_观影页面去广告
哔哩哔哩_观影页面去广告 = type=http-response,pattern=^https?:\/\/api\.(bilibili|biliapi)\.(com|net)\/pgc\/page\/cinema\/tab\? requires-body=1,max-size=0,script-path=https://raw.githubusercontent.com/Softlyx/QuantumultX/main/AdBlock/Bilibili/Bilibili.js,script-update-interval=0
# ～ BiliBili_哔哩哔哩_应用开屏广告预加载
哔哩哔哩_应用开屏广告预加载 = type=http-response,pattern=^https:\/\/app\.bilibili\.com\/x\/v2\/splash\/list requires-body=1,max-size=0,script-path=https://raw.githubusercontent.com/Softlyx/QuantumultX/main/AdBlock/Bilibili/Bilibili.js,script-update-interval=0
# ～ BiliBili_哔哩哔哩_1080P高码率+4K画质[番剧和影视除外]
哔哩哔哩_1080P高码率+4K画质 = type=http-response,pattern=^https?:\/\/app\.bilibili\.com\/x\/v2\/account\/myinfo\? requires-body=1,max-size=0,script-path=https://raw.githubusercontent.com/Softlyx/QuantumultX/main/AdBlock/Bilibili/Bilibili.js,script-update-interval=0
# ～ BiliBili_哔哩哔哩_热搜发现
哔哩哔哩_热搜发现 = type=http-response,pattern=^https://app.bilibili.com/x/v2/search/square requires-body=1,max-size=0,script-path=https://raw.githubusercontent.com/Softlyx/QuantumultX/main/AdBlock/Bilibili/Bilibili.js,script-update-interval=0
# ～ BiliBili_哔哩哔哩_推荐去广告
哔哩哔哩_推荐去广告 = type=http-response,pattern=^https?:\/\/app\.bilibili\.com\/x\/v2\/feed\/index requires-body=1,max-size=0,script-path=https://raw.githubusercontent.com/Softlyx/QuantumultX/main/AdBlock/Bilibili/Bilibili.js,script-update-interval=0
# ～ BiliBili_哔哩哔哩_追番去广告
哔哩哔哩_追番去广告 = type=http-response,pattern=^https?:\/\/api\.(bilibili|biliapi)\.(com|net)\/pgc\/page\/bangumi requires-body=1,max-size=0,script-path=https://raw.githubusercontent.com/Softlyx/QuantumultX/main/AdBlock/Bilibili/Bilibili.js,script-update-interval=0
# ～ BiliBili_哔哩哔哩_直播去广告@bm7
哔哩哔哩_直播去广告 = type=http-response,pattern=^https?:\/\/api\.live\.bilibili\.com\/xlive\/app-room\/v1\/index\/getInfoByRoom requires-body=1,max-size=0,script-path=https://raw.githubusercontent.com/Softlyx/QuantumultX/main/AdBlock/Bilibili/Bilibili.js,script-update-interval=0
# ～ BiliBili_哔哩哔哩_标签页处理
哔哩哔哩_标签页处理 = type=http-response,pattern=^https?:\/\/app\.bilibili\.com\/x\/resource\/show\/tab requires-body=1,max-size=0,script-path=https://raw.githubusercontent.com/Softlyx/QuantumultX/main/AdBlock/Bilibili/Bilibili.js,script-update-interval=0
# ～ BiliBili_哔哩哔哩_我的页面处理
哔哩哔哩_我的页面处理 = type=http-response,pattern=^https?:\/\/app\.bilibili\.com\/x\/v2\/account\/mine requires-body=1,max-size=0,script-path=https://raw.githubusercontent.com/Softlyx/QuantumultX/main/AdBlock/Bilibili/Bilibili.js,script-update-interval=0
# ～ BiliBili_哔哩哔哩_UP主推荐广告[适配ipad端]
哔哩哔哩_UP主推荐广告 = type=http-response,pattern=^https?:\/\/(app\.bilibili\.com|grpc\.biliapi\.net)\/bilibili\.app\.view\.v1\.View\/View$ requires-body=1,max-size=0,script-path=https://raw.githubusercontent.com/Softlyx/QuantumultX/main/AdBlock/Bilibili/Bilibiliproto.js,script-update-interval=0
# ～ BiliBili_哔哩哔哩_动态页面去广告
哔哩哔哩_动态页面去广告 = type=http-response,pattern=^https?:\/\/(app\.bilibili\.com|grpc\.biliapi\.net)\/bilibili\.app\.dynamic\.v2\.Dynamic\/DynAll$ requires-body=1,max-size=0,script-path=https://raw.githubusercontent.com/Softlyx/QuantumultX/main/AdBlock/Bilibili/Bilibiliproto.js,script-update-interval=0
# ～ BiliBili_哔哩哔哩_去除统一设置的皮肤[注释留存]
;^https?:\/\/app\.bilibili\.com\/x\/resource\/show\/skin\? requires-body=1,max-size=0,script-path=https://raw.githubusercontent.com/Softlyx/QuantumultX/main/AdBlock/Bilibili/Bilibili.js,script-update-interval=0
